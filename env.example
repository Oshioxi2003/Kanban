# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For MySQL: mysql://username:password@host:port/database_name
# For PostgreSQL: postgres://username:password@host:port/database_name

# MySQL Database Settings (for Docker)
MYSQL_DATABASE=kanban_db
MYSQL_USER=kanban_user
MYSQL_PASSWORD=kanban_password
MYSQL_ROOT_PASSWORD=root_password
MYSQL_HOST=localhost
MYSQL_PORT=3306

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Social Authentication (Google OAuth)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_ALL_ORIGINS=False

# Static Files (for production)
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# Redis Configuration (for Channels/WebSockets)
REDIS_URL=redis://localhost:6379/0

# AI Assistant Configuration
OPENAI_API_KEY=your-openai-api-key

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7

# Timezone
TIME_ZONE=UTC

# Language
LANGUAGE_CODE=en-us

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Personal Kanban Life Planner