# Production Environment Variables
# IMPORTANT: Change all default values for production!

# Django Configuration
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-SECRET-KEY-FOR-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration (MySQL for production)
DATABASE_URL=mysql://kanban_user:STRONG_PASSWORD@mysql:3306/kanban_db

# MySQL Database Settings
MYSQL_DATABASE=kanban_db
MYSQL_USER=kanban_user
MYSQL_PASSWORD=STRONG_DATABASE_PASSWORD
MYSQL_ROOT_PASSWORD=STRONG_ROOT_PASSWORD
MYSQL_HOST=mysql
MYSQL_PORT=3306

# Email Configuration (Production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-production-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Social Authentication (Google OAuth)
GOOGLE_OAUTH2_CLIENT_ID=your-production-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-production-google-client-secret

# CORS Settings (Production)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_ALL_ORIGINS=False

# Static Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# AI Assistant Configuration
OPENAI_API_KEY=your-production-openai-api-key

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=30
JWT_REFRESH_TOKEN_LIFETIME=1

# Timezone & Language
TIME_ZONE=UTC
LANGUAGE_CODE=en-us

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Frontend Configuration
VITE_API_URL=https://yourdomain.com
VITE_APP_NAME=Personal Kanban Life Planner